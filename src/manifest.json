{
  "manifest_version": 3,
  "name": "FindFont - Font Identifier",
  "short_name": "FindFont",
  "version": "1.0.0",
  "description": "Identify fonts from selected text on webpages",
  "permissions": ["activeTab", "scripting", "notifications", "storage"],
  "action": {
    "default_icon": {
      "16": "static/icon16.png",
      "48": "static/icon48.png",
      "128": "static/icon128.png"
    },
    "default_title": "Click to activate FindFont on this page"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["static/*", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "static/icon16.png",
    "48": "static/icon48.png",
    "128": "static/icon128.png"
  }
}
